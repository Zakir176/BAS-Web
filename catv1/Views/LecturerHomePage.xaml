<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="catv1.Views.LecturerHomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Lecturer Dashboard"
    BackgroundColor="#0F172A">
    <Grid>
        <!--  Background Image  -->
        <Image
            Aspect="AspectFill"
            Opacity="0.2"
            Source="lecture_room_bg.png" />

        <!--  Blur/Overlay  -->
        <BoxView BackgroundColor="#0F172A" Opacity="0.5" />

        <Grid RowDefinitions="Auto, *">
            <!--  Header  -->
            <Grid Padding="20,20,20,10" ColumnDefinitions="*, Auto">
                <Label
                    Style="{StaticResource LabelHeader}"
                    Text="Lecturer Dashboard"
                    VerticalOptions="Center" />
                <ImageButton
                    Grid.Column="1"
                    BackgroundColor="#1E293B"
                    Clicked="OnLogoutClicked"
                    CornerRadius="20"
                    HeightRequest="40"
                    WidthRequest="40">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="Arial"
                            Glyph="ðŸšª"
                            Size="20"
                            Color="#EF4444" />
                    </ImageButton.Source>
                </ImageButton>
            </Grid>

            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="20" Spacing="20">
                    <!--  Stats Section  -->
                    <Border Style="{StaticResource GlassCard}">
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                                <Label FontSize="40" Text="ðŸ‘¨â€ðŸ«" />
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="22"
                                        Text="{Binding Name}"
                                        TextColor="White" />
                                    <Label Style="{StaticResource LabelCaption}" Text="{Binding Department}" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <BoxView HeightRequest="1" Color="#1F2937" />

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                                <VerticalStackLayout Spacing="5">
                                    <Label Style="{StaticResource LabelCaption}" Text="AVG ATTENDANCE" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        Text="88%"
                                        TextColor="{StaticResource AttendanceBlue}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Style="{StaticResource LabelCaption}" Text="ACTIVE CLASSES" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        Text="4"
                                        TextColor="{StaticResource SuccessGreen}" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!--  Quick Actions  -->
                    <Label
                        FontAttributes="Bold"
                        Text="Quick Actions"
                        TextColor="#64748B" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <Button
                            BackgroundColor="#3B82F6"
                            CornerRadius="15"
                            Text="Start Session"
                            TextColor="White" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="#1E293B"
                            BorderColor="#334155"
                            BorderWidth="1"
                            CornerRadius="15"
                            Text="View Reports"
                            TextColor="White" />
                    </Grid>

                    <!--  Recent Activity  -->
                    <Label
                        FontAttributes="Bold"
                        Text="Recent Activity"
                        TextColor="#64748B" />

                    <Border Style="{StaticResource StatCard}">
                        <Label
                            HorizontalOptions="Center"
                            Text="Class attendance will appear here"
                            TextColor="Gray" />
                    </Border>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>