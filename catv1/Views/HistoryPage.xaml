<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="catv1.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:catv1.ViewModels"
    Title="History"
    BackgroundColor="{StaticResource Background}">

    <ContentPage.Resources>
        <Style x:Key="FilterPickerStyle" TargetType="Picker">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="TitleColor" Value="{StaticResource Gray400}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, Auto, *">
        <!--  Background Overlay  -->
        <Image
            Aspect="AspectFill"
            Opacity="0.1"
            Source="Resources/Images/lecture_room.png" />

        <!--  Header  -->
        <Grid Padding="24,20,24,10" ColumnDefinitions="Auto, *, Auto">
            <Border
                BackgroundColor="{StaticResource Surface}"
                HeightRequest="40"
                Stroke="{StaticResource GlassBorder}"
                StrokeShape="RoundRectangle 20"
                WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Border.GestureRecognizers>
                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="â¬…"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>
            <Label
                Grid.Column="1"
                HorizontalOptions="Center"
                Style="{StaticResource LabelHeader}"
                Text="History Reports"
                VerticalOptions="Center" />
            <Label
                Grid.Column="2"
                FontSize="24"
                Text="ðŸ“Š"
                VerticalOptions="Center" />
        </Grid>

        <!--  Filters  -->
        <Grid
            Grid.Row="1"
            Margin="24,10"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="12">
            <Border
                BackgroundColor="{StaticResource Surface}"
                Stroke="{StaticResource GlassBorder}"
                StrokeShape="RoundRectangle 16">
                <Picker
                    Title="Grade"
                    HorizontalTextAlignment="Center"
                    ItemsSource="{Binding Grades}"
                    SelectedItem="{Binding SelectedGrade}"
                    Style="{StaticResource FilterPickerStyle}" />
            </Border>
            <Border
                Grid.Column="1"
                BackgroundColor="{StaticResource Surface}"
                Stroke="{StaticResource GlassBorder}"
                StrokeShape="RoundRectangle 16">
                <Picker
                    Title="Month"
                    HorizontalTextAlignment="Center"
                    ItemsSource="{Binding Months}"
                    SelectedItem="{Binding SelectedMonth}"
                    Style="{StaticResource FilterPickerStyle}" />
            </Border>
            <Border
                Grid.Column="2"
                BackgroundColor="{StaticResource Surface}"
                Stroke="{StaticResource GlassBorder}"
                StrokeShape="RoundRectangle 16">
                <Picker
                    Title="Year"
                    HorizontalTextAlignment="Center"
                    ItemsSource="{Binding Years}"
                    SelectedItem="{Binding SelectedYear}"
                    Style="{StaticResource FilterPickerStyle}" />
            </Border>
        </Grid>

        <!--  Presence Summary  -->
        <VerticalStackLayout Grid.Row="2" Padding="24,10">
            <Label
                FontSize="18"
                Style="{StaticResource LabelHeader}"
                Text="Presence Summary" />

            <Grid
                Margin="0,16,0,0"
                ColumnDefinitions="*,*"
                ColumnSpacing="16">
                <!--  Present  -->
                <Border Style="{StaticResource StatCard}">
                    <VerticalStackLayout Spacing="12">
                        <Border
                            HeightRequest="80"
                            Stroke="{StaticResource Success}"
                            StrokeShape="RoundRectangle 40"
                            StrokeThickness="3"
                            WidthRequest="80">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="{Binding PresencePercentageDisplay}"
                                TextColor="{StaticResource Success}"
                                VerticalOptions="Center" />
                        </Border>
                        <Label
                            HorizontalOptions="Center"
                            Style="{StaticResource LabelCaption}"
                            Text="Present" />
                    </VerticalStackLayout>
                </Border>

                <!--  Absent  -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <VerticalStackLayout Spacing="12">
                        <Border
                            HeightRequest="80"
                            Stroke="{StaticResource Error}"
                            StrokeShape="RoundRectangle 40"
                            StrokeThickness="3"
                            WidthRequest="80">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="{Binding AbsencePercentageDisplay}"
                                TextColor="{StaticResource Error}"
                                VerticalOptions="Center" />
                        </Border>
                        <Label
                            HorizontalOptions="Center"
                            Style="{StaticResource LabelCaption}"
                            Text="Absent" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>

        <!--  Student Statistics  -->
        <Grid
            Grid.Row="3"
            Padding="24,16,24,24"
            RowDefinitions="Auto, *">
            <Grid ColumnDefinitions="*, Auto">
                <Label
                    FontSize="18"
                    Style="{StaticResource LabelHeader}"
                    Text="Student Statistics"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    Style="{StaticResource LabelCaption}"
                    Text="32 STUDENTS"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="Center" />
            </Grid>

            <CollectionView
                Grid.Row="1"
                Margin="0,12,0,0"
                ItemsSource="{Binding Students}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,12"
                            Padding="12"
                            BackgroundColor="{StaticResource Surface}"
                            Stroke="{StaticResource GlassBorder}"
                            StrokeShape="RoundRectangle 16">
                            <Grid ColumnDefinitions="Auto, *, Auto">
                                <Border
                                    BackgroundColor="{StaticResource Background}"
                                    HeightRequest="44"
                                    Stroke="{StaticResource GlassBorder}"
                                    StrokeShape="RoundRectangle 22"
                                    WidthRequest="44">
                                    <Image Aspect="AspectFill" Source="{Binding Avatar}" />
                                </Border>

                                <VerticalStackLayout
                                    Grid.Column="1"
                                    Margin="16,0"
                                    VerticalOptions="Center">
                                    <Label
                                        FontSize="14"
                                        Style="{StaticResource LabelHeader}"
                                        Text="{Binding Name}" />
                                    <Label Style="{StaticResource LabelCaption}" Text="{Binding Id}" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        HorizontalOptions="End"
                                        Text="{Binding PresenceRateDisplay}"
                                        TextColor="{StaticResource Primary}" />
                                    <Label
                                        HorizontalOptions="End"
                                        Style="{StaticResource LabelCaption}"
                                        Text="{Binding AbsencesDisplay}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Bottom Action Overlay  -->
            <Button
                Grid.Row="1"
                Margin="0,20"
                BackgroundColor="{StaticResource Surface}"
                BorderColor="{StaticResource GlassBorder}"
                BorderWidth="1"
                HeightRequest="50"
                Text="View Full Student List"
                TextColor="White"
                VerticalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>
