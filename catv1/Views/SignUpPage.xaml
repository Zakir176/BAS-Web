<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="catv1.Views.SignUpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:catv1.ViewModels"
    Title="Sign Up"
    BackgroundColor="{StaticResource Background}"
    Shell.NavBarIsVisible="False">

    <Grid>
        <!--  Background Image with Overlay  -->
        <Image
            Aspect="AspectFill"
            Opacity="0.3"
            Source="lecture_room.png" />

        <BoxView Opacity="0.6" Color="{StaticResource Background}" />

        <ScrollView>
            <VerticalStackLayout
                Padding="30"
                Spacing="32"
                VerticalOptions="FillAndExpand">

                <!--  Header Section  -->
                <VerticalStackLayout Margin="0,20,0,0" Spacing="12">
                    <Label
                        HorizontalOptions="Center"
                        Style="{StaticResource LabelHeader}"
                        Text="Create Account" />
                    <Label
                        HorizontalOptions="Center"
                        Style="{StaticResource LabelCaption}"
                        Text="Join the Smart Attendance System" />
                </VerticalStackLayout>

                <!--  Sign Up Card  -->
                <Border Margin="0,0,0,20" Style="{StaticResource GlassCard}">
                    <VerticalStackLayout Spacing="28">

                        <!--  Role Switcher  -->
                        <Border
                            BackgroundColor="{StaticResource Surface}"
                            HeightRequest="56"
                            HorizontalOptions="Center"
                            Stroke="{StaticResource GlassBorder}"
                            StrokeShape="RoundRectangle 28"
                            WidthRequest="280">
                            <Grid ColumnDefinitions="*,*">
                                <Border
                                    Margin="4"
                                    BackgroundColor="{Binding IsStudent, Converter={StaticResource BoolToColorConverter}}"
                                    StrokeShape="RoundRectangle 24"
                                    StrokeThickness="0">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SetRoleCommand}" CommandParameter="Student" />
                                    </Border.GestureRecognizers>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Student"
                                        TextColor="{Binding IsStudent, Converter={StaticResource BoolToInverseTextColorConverter}}"
                                        VerticalOptions="Center" />
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Margin="4"
                                    BackgroundColor="{Binding IsLecturer, Converter={StaticResource BoolToColorConverter}}"
                                    StrokeShape="RoundRectangle 24"
                                    StrokeThickness="0">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SetRoleCommand}" CommandParameter="Lecturer" />
                                    </Border.GestureRecognizers>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Lecturer"
                                        TextColor="{Binding IsLecturer, Converter={StaticResource BoolToInverseTextColorConverter}}"
                                        VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                        <Label
                            FontSize="18"
                            HorizontalOptions="Center"
                            Style="{StaticResource LabelHeader}"
                            Text="{Binding SignUpTitle}" />

                        <!--  Input Fields  -->
                        <VerticalStackLayout Spacing="16">
                            <!--  Name Fields  -->
                            <Grid ColumnDefinitions="*, *" ColumnSpacing="12">
                                <Border
                                    Padding="16,0"
                                    BackgroundColor="{StaticResource Surface}"
                                    HeightRequest="56"
                                    Stroke="{StaticResource GlassBorder}"
                                    StrokeShape="RoundRectangle 16">
                                    <Entry
                                        Placeholder="First Name"
                                        Text="{Binding FirstName}"
                                        VerticalOptions="Center" />
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Padding="16,0"
                                    BackgroundColor="{StaticResource Surface}"
                                    HeightRequest="56"
                                    Stroke="{StaticResource GlassBorder}"
                                    StrokeShape="RoundRectangle 16">
                                    <Entry
                                        Placeholder="Last Name"
                                        Text="{Binding LastName}"
                                        VerticalOptions="Center" />
                                </Border>
                            </Grid>

                            <!--  Email Field  -->
                            <Border
                                Padding="16,0"
                                BackgroundColor="{StaticResource Surface}"
                                HeightRequest="56"
                                Stroke="{StaticResource GlassBorder}"
                                StrokeShape="RoundRectangle 16">
                                <Grid ColumnDefinitions="40, *">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="âœ‰"
                                        TextColor="{StaticResource PrimaryLight}"
                                        VerticalOptions="Center" />
                                    <Entry
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Keyboard="Email"
                                        Placeholder="Email Address"
                                        Text="{Binding Email}"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>

                            <!--  ID Field  -->
                            <Border
                                Padding="16,0"
                                BackgroundColor="{StaticResource Surface}"
                                HeightRequest="56"
                                Stroke="{StaticResource GlassBorder}"
                                StrokeShape="RoundRectangle 16">
                                <Grid ColumnDefinitions="40, *">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="ðŸ†”"
                                        TextColor="{StaticResource PrimaryLight}"
                                        VerticalOptions="Center" />
                                    <Entry
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Placeholder="{Binding IdPlaceholder}"
                                        Text="{Binding Id}"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>

                            <!--  Department/Class Field  -->
                            <Border
                                Padding="16,0"
                                BackgroundColor="{StaticResource Surface}"
                                HeightRequest="56"
                                Stroke="{StaticResource GlassBorder}"
                                StrokeShape="RoundRectangle 16">
                                <Grid ColumnDefinitions="40, *">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="ðŸ›"
                                        TextColor="{StaticResource PrimaryLight}"
                                        VerticalOptions="Center" />
                                    <Entry
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Placeholder="{Binding DeptPlaceholder}"
                                        Text="{Binding Department}"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>

                            <!--  Password Field  -->
                            <Border
                                Padding="16,0"
                                BackgroundColor="{StaticResource Surface}"
                                HeightRequest="56"
                                Stroke="{StaticResource GlassBorder}"
                                StrokeShape="RoundRectangle 16">
                                <Grid ColumnDefinitions="40, *, 40">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="ðŸ”’"
                                        TextColor="{StaticResource PrimaryLight}"
                                        VerticalOptions="Center" />
                                    <Entry
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        IsPassword="{Binding IsPassword}"
                                        Placeholder="Password"
                                        Text="{Binding Password}"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontSize="18"
                                        HorizontalTextAlignment="Center"
                                        Text="ðŸ‘"
                                        TextColor="{StaticResource Gray400}"
                                        VerticalTextAlignment="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding TogglePasswordCommand}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                            </Border>

                            <!--  Confirm Password Field  -->
                            <Border
                                Padding="16,0"
                                BackgroundColor="{StaticResource Surface}"
                                HeightRequest="56"
                                Stroke="{StaticResource GlassBorder}"
                                StrokeShape="RoundRectangle 16">
                                <Grid ColumnDefinitions="40, *">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="ðŸ”’"
                                        TextColor="{StaticResource PrimaryLight}"
                                        VerticalOptions="Center" />
                                    <Entry
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        IsPassword="{Binding IsPassword}"
                                        Placeholder="Confirm Password"
                                        Text="{Binding ConfirmPassword}"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <!--  Action Section  -->
                        <VerticalStackLayout Spacing="24">
                            <Button
                                Command="{Binding SignUpCommand}"
                                HeightRequest="56"
                                Text="Create Account" />

                            <Label HorizontalOptions="Center" VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Style="{StaticResource LabelCaption}" Text="Already have an account? " />
                                        <Span
                                            FontAttributes="Bold"
                                            Style="{StaticResource LabelCaption}"
                                            Text="Login here"
                                            TextColor="{StaticResource Primary}">
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding LoginCommand}" />
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Border>

                <!--  Footer Info  -->
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource LabelCaption}"
                    Text="Version 1.0.0 â€¢ Verified Secure"
                    TextColor="{StaticResource Gray500}" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
