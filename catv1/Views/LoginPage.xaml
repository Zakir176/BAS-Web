<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="catv1.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="#F0F0F0">

    <Grid RowDefinitions="*,Auto,*" Padding="30">
        <VerticalStackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Attendance Tracker" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#1A1A1A"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <RadioButton Content="Student" IsChecked="True" TextColor="#333"/>
                <RadioButton Content="Lecturer" TextColor="#333"/>
            </HorizontalStackLayout>

            <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 10">
                <Entry Placeholder="ID Number (e.g. 210984)" 
                       Keyboard="Numeric" 
                       HeightRequest="50"
                       Margin="10,0"/>
            </Border>

            <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 10">
                <Entry Placeholder="Password" 
                       IsPassword="True" 
                       HeightRequest="50"
                       Margin="10,0"/>
            </Border>

            <Button Text="Sign In" 
                    BackgroundColor="#2196F3" 
                    TextColor="White" 
                    CornerRadius="25" 
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Clicked="OnLoginClicked"/>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>