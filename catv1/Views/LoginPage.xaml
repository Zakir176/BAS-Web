<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="catv1.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="#0F172A"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions="Auto, *, Auto" Padding="20">

        <HorizontalStackLayout Grid.Row="0" Spacing="10" VerticalOptions="Start" Margin="0,10,0,0">
            <Frame BackgroundColor="#1E293B" CornerRadius="8" Padding="8" HasShadow="False" HeightRequest="40" WidthRequest="40">
                 <Label Text="ðŸŽ“" TextColor="#3B82F6" HorizontalOptions="Center" VerticalOptions="Center" FontSize="18"/>
            </Frame>
            <Label Text="Smart Attendance" TextColor="White" VerticalOptions="Center" FontAttributes="Bold" FontSize="16"/>
        </HorizontalStackLayout>

        <Border Grid.Row="1" 
                StrokeThickness="0"
                BackgroundColor="#1E293B" 
                StrokeShape="RoundRectangle 15"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="380">
            
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.5"/>
            </Border.Shadow>

            <VerticalStackLayout Padding="30" Spacing="15">
                
                <Border Stroke="#334155" StrokeShape="RoundRectangle 8" BackgroundColor="#0F172A" Padding="2">
                    <Grid ColumnDefinitions="*,*">
                        <Button Text="Student" 
                                BackgroundColor="Transparent" 
                                TextColor="#94A3B8" 
                                FontAttributes="Bold"
                                CornerRadius="6"
                                Clicked="OnStudentClicked"
                                x:Name="BtnStudent"/>
                        <Button Grid.Column="1" 
                                Text="Lecturer" 
                                BackgroundColor="#3B82F6" 
                                TextColor="White" 
                                FontAttributes="Bold"
                                CornerRadius="6"
                                Clicked="OnLecturerClicked"
                                x:Name="BtnLecturer"/>
                    </Grid>
                </Border>

                <Label Text="Lecturer Login" 
                       x:Name="LblWelcomeTitle"
                       TextColor="White" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                
                <Label Text="Welcome back. Sign in to manage access." 
                       TextColor="#94A3B8" 
                       FontSize="13" 
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center"/>

                <VerticalStackLayout Spacing="8">
                    <Label Text="Staff Email" TextColor="#CBD5E1" FontSize="12" FontAttributes="Bold"/>
                    <Border Stroke="#334155" StrokeThickness="1" BackgroundColor="#0F172A" StrokeShape="RoundRectangle 8" HeightRequest="50">
                        <Grid ColumnDefinitions="50, *">
                            <Label Text="ðŸ“§" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#64748B"/>
                            <Entry Grid.Column="1" 
                                   Placeholder="name@university.edu" 
                                   PlaceholderColor="#475569" 
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="Password" TextColor="#CBD5E1" FontSize="12" FontAttributes="Bold"/>
                    <Border Stroke="#334155" StrokeThickness="1" BackgroundColor="#0F172A" StrokeShape="RoundRectangle 8" HeightRequest="50">
                        <Grid ColumnDefinitions="50, *, 50">
                            <Label Text="ðŸ”’" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#64748B"/>
                            <Entry Grid.Column="1" 
                                   Placeholder="Enter your password" 
                                   PlaceholderColor="#475569" 
                                   IsPassword="True"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="" 
                                         BackgroundColor="Transparent">
                                <ImageButton.Source>
                                    <FontImageSource FontFamily="Arial" Glyph="ðŸ‘" Color="#64748B"/>
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="Auto, *" Margin="0,5">
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#3B82F6"/>
                        <Label Text="Remember me" TextColor="#94A3B8" VerticalOptions="Center" FontSize="12"/>
                    </HorizontalStackLayout>
                    <Label Grid.Column="1" Text="Forgot Password?" TextColor="#3B82F6" HorizontalOptions="End" VerticalOptions="Center" FontSize="12"/>
                </Grid>

                <Button Text="Sign In to Dashboard  âž”" 
                        BackgroundColor="#3B82F6" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="8" 
                        HeightRequest="50"
                        Clicked="OnLoginClicked"/>

                <Label Text="ðŸ”’ SECURE STAFF PORTAL" 
                       TextColor="#475569" 
                       FontSize="10" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       LetterSpacing="1"/>

            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout Grid.Row="2" Spacing="5" VerticalOptions="End" Margin="0,0,0,20">
            <Label Text="Â© 2026 University Smart Attendance System" TextColor="#475569" FontSize="10" HorizontalOptions="Center"/>
            <Label Text="Version 1.0.2 â€¢ Optimized for CS Dept" TextColor="#475569" FontSize="10" HorizontalOptions="Center"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>