<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="catv1.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage"
    BackgroundColor="#0F172A"
    Shell.NavBarIsVisible="False">

    <Grid Padding="20" RowDefinitions="Auto, *, Auto">

        <HorizontalStackLayout
            Grid.Row="0"
            Margin="0,10,0,0"
            Spacing="10"
            VerticalOptions="Start">
            <Border
                BackgroundColor="#1E293B"
                HeightRequest="40"
                WidthRequest="40">
                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="ðŸŽ“"
                    TextColor="#3B82F6"
                    VerticalOptions="Center" />
            </Border>
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Smart Attendance"
                TextColor="White"
                VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Border
            Grid.Row="1"
            BackgroundColor="#1E293B"
            HorizontalOptions="Center"
            StrokeShape="RoundRectangle 15"
            StrokeThickness="0"
            VerticalOptions="Center"
            WidthRequest="380">

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.5"
                    Radius="20"
                    Offset="0,10" />
            </Border.Shadow>

            <VerticalStackLayout Padding="30" Spacing="15">

                <Border
                    Padding="2"
                    BackgroundColor="#0F172A"
                    Stroke="#334155"
                    StrokeShape="RoundRectangle 8">
                    <Grid ColumnDefinitions="*,*">
                        <Button
                            x:Name="BtnStudent"
                            BackgroundColor="#3B82F6"
                            Clicked="OnStudentClicked"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            Text="Student"
                            TextColor="White" />

                        <Button
                            x:Name="BtnLecturer"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            Clicked="OnLecturerClicked"
                            CornerRadius="5"
                            FontAttributes="Bold"
                            Text="Lecturer"
                            TextColor="#94A3B8" />
                    </Grid>
                </Border>

                <Label
                    x:Name="LblWelcomeTitle"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Text="Lecturer Login"
                    TextColor="White" />

                <Label
                    FontSize="13"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Welcome back. Sign in to manage access."
                    TextColor="#94A3B8" />

                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="Email"
                        TextColor="#CBD5E1" />
                    <Border
                        BackgroundColor="#0F172A"
                        HeightRequest="50"
                        Stroke="#334155"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <Grid ColumnDefinitions="50, *">
                            <Label
                                HorizontalOptions="Center"
                                Text="ðŸ“§"
                                TextColor="#64748B"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Column="1"
                                Placeholder="uniname@university.edu"
                                PlaceholderColor="#475569"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="Password"
                        TextColor="#CBD5E1" />
                    <Border
                        BackgroundColor="#0F172A"
                        HeightRequest="50"
                        Stroke="#334155"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <Grid ColumnDefinitions="50, *, 50">
                            <Label
                                HorizontalOptions="Center"
                                Text="ðŸ”’"
                                TextColor="#64748B"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Column="1"
                                IsPassword="True"
                                Placeholder="Enter your password"
                                PlaceholderColor="#475569"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <ImageButton Grid.Column="2" BackgroundColor="Transparent">
                                <ImageButton.Source>
                                    <FontImageSource
                                        FontFamily="Arial"
                                        Glyph="ðŸ‘"
                                        Color="#64748B" />
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Grid Margin="0,5" ColumnDefinitions="Auto, *">
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#3B82F6" />
                        <Label
                            FontSize="12"
                            Text="Remember me"
                            TextColor="#94A3B8"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Label
                        Grid.Column="1"
                        FontSize="12"
                        HorizontalOptions="End"
                        Text="Forgot Password?"
                        TextColor="#3B82F6"
                        VerticalOptions="Center" />
                </Grid>

                <Button
                    BackgroundColor="#3B82F6"
                    Clicked="OnLoginClicked"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="Sign In to Dashboard  âž”"
                    TextColor="White" />

                <Label
                    FontAttributes="Bold"
                    FontSize="10"
                    HorizontalOptions="Center"
                    Text="ðŸ”’ SECURE STAFF PORTAL"
                    TextColor="#475569" />
            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout
            Grid.Row="2"
            Margin="0,0,0,20"
            Spacing="5"
            VerticalOptions="End">
            <Label
                FontSize="10"
                HorizontalOptions="Center"
                Text="Â© 2026 University Smart Attendance System"
                TextColor="#475569" />
            <Label
                FontSize="10"
                HorizontalOptions="Center"
                Text="Version 1.0.2 â€¢ Optimized for CS Dept"
                TextColor="#475569" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>