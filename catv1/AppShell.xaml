<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="catv1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:catv1.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="login" />

        <TabBar Route="student">
            <Tab
                Title="Dashboard"
                Icon="home_icon.png"
                Route="studentDashboardTab">
                <ShellContent ContentTemplate="{DataTemplate local:StudentHomePage}" Route="home" />
            </Tab>
            <Tab
                Title="History"
                Icon="history_icon.png"
                Route="historyTab">
                <ShellContent ContentTemplate="{DataTemplate local:HistoryPage}" Route="history" />
            </Tab>
        </TabBar>

        <TabBar Route="lecturer">
            <Tab
                Title="Class Management"
                Icon="class_icon.png"
                Route="lecturerDashboardTab">
                <ShellContent ContentTemplate="{DataTemplate local:LecturerHomePage}" Route="dashboard" />
            </Tab>
            <Tab
                Title="Scan ID"
                Icon="scan_icon.png"
                Route="scanTab">
                <ShellContent ContentTemplate="{DataTemplate local:ScanPage}" Route="scan" />
            </Tab>
        </TabBar>
    </FlyoutItem>

</Shell>
